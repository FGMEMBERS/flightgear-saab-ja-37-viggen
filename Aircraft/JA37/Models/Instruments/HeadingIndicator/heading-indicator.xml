<PropertyList>

 <!-- Horizontal Situation Indicator -->
 <name>HSI</name>
 <path>heading-indicator.ac</path>

  <effect>  
    <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
    <object-name>glassHeading</object-name>
  </effect>

 <animation>
  <type>rotate</type>
  <object-name>TheHand</object-name>
  <property>orientation/heading-magnetic-deg</property>
  <condition>
    <greater-than>
      <property>systems/electrical/outputs/dc-voltage</property>
      <value>23</value>
    </greater-than>
  </condition>
  <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>360</ind><dep>360</dep></entry>
  </interpolation>
  <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
  </center>
  <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
  </axis>
 </animation>

<animation>
  <type>pick</type> 
  <object-name>glassHeading</object-name>
  <object-name>CLOCK_mount</object-name>
  <hovered>
       <binding>
         <command>set-tooltip</command>
         <tooltip-id>ADI</tooltip-id>
         <label>Magnetic heading: %3d</label>
         <property>/orientation/heading-magnetic-deg</property>
      </binding>
   </hovered>
 </animation>

 <!-- lighting -->
 <animation>
  <object-name>TheHand</object-name>
  <object-name>CLOCK_face</object-name>
  <type>material</type>
  <emission>
   <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   <green-prop>instrumentation/instrumentation-light/g</green-prop> 
   <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>


</PropertyList>
