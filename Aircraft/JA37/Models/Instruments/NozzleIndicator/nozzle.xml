<?xml version="1.0"?>
<PropertyList>
	 <path>nozzle.ac</path>

	 <effect>  
      <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
      <object-name>NozzleGlass</object-name>
    </effect>

	 <animation>
	  <type>rotate</type>
	  <object-name>TheHand</object-name>
	  <condition>   
	    <greater-than>
	    	<property>systems/electrical/outputs/dc-voltage</property>
	    	<value>23</value>
	   	</greater-than>
	  </condition>
	  <property>fdm/jsbsim/propulsion/engine/nozzle</property>
	  <factor>240</factor>
	  <offset-deg>240</offset-deg>
	  <axis>
	   <x>0</x>
	   <y>0</y>
	   <z>-1</z>
	  </axis>
	 </animation>

	<animation>
	  <type>pick</type>
      <object-name>NozzleGlass</object-name>	  
	  <object-name>CLOCK_face</object-name>
	  <hovered>
	       <binding>
	         <command>set-tooltip</command>
	         <tooltip-id>nozzle</tooltip-id>
	         <label>Nozzle position / Afterburner zone</label>
	      </binding>
	   </hovered>
	 </animation>
	  

	<!-- lighting -->
	<animation>
	  <object-name>CLOCK_face</object-name>
      <object-name>TheHand</object-name>
	  <type>material</type>
	  <emission>
	    <red-prop>instrumentation/instrumentation-light/r</red-prop> 
	     <green-prop>instrumentation/instrumentation-light/g</green-prop> 
	     <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
	     <factor-prop>controls/lighting/instruments-norm</factor-prop>
	  </emission>
	</animation>

</PropertyList>
