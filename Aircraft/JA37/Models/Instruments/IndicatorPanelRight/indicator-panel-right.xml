	<animation>
	  <name>Pitch limiter</name>
	  <object-name>indicatorLeft5</object-name>
	  <type>material</type>
	  <condition>
		  	<less-than>
		  		<property>fdm/jsbsim/systems/flight/pitch-limiter</property>
				<value>1.0</value>
		  	</less-than>
	  </condition>
	  <emission>
	    <red>1</red>
	    <green>1</green> 
	    <blue>1</blue>
	    <factor-prop>controls/lighting/instruments-norm</factor-prop>
	  </emission>
	</animation>

	<animation>
	  <name>Cabin pressure</name>
	  <object-name>indicatorLeft6</object-name>
	  <type>material</type>
	  <condition>
		  	<less-than>
		  		<property>fdm/jsbsim/systems/flight/cabin-pressure-kpm2</property>
				<value>0.15</value>
		  	</less-than>
	  </condition>
	  <emission>
	    <red>1</red>
	    <green>1</green>
	    <blue>1</blue>
	    <factor-prop>controls/lighting/instruments-norm</factor-prop>
	  </emission>
	</animation>

	<animation>
	  <name>Canopy and seat</name>
	  <object-name>indicatorLeft7</object-name>
	  <type>material</type>
	  <condition>
	  	<or>
	  		<equals>
		  		<property>sim/ja37/avionics/canopyAndSeat</property>
				<value>1</value>
		  	</equals>
		  	<and>
			  	<not-equals>
			  		<property>canopy/position-norm</property>
					<value>0</value>
			  	</not-equals>
			  	<or>
				  	<not-equals>
				  		<property>gear/gear[0]/wow</property>
						<value>1</value>
				  	</not-equals>
				  	<greater-than>
				  		<property>engines/engine[0]/n2</property>
						<value>88.5</value>
				  	</greater-than>				  	
			  	</or>
		  	</and>
		  	<not-equals>
		  		<property>fdm/jsbsim/fcs/canopy/serviceable</property>
				<value>1</value>
		  	</not-equals>
		  	<not-equals>
		  		<property>fdm/jsbsim/fcs/canopy/hinges/serviceable</property>
				<value>1</value>
		  	</not-equals>
	  	</or>
	  </condition>
	  <emission>
	    <red>1</red>
	    <green>1</green> 
	    <blue>1</blue>
	    <factor-prop>controls/lighting/instruments-norm</factor-prop>
	  </emission>
	</animation>

