	  <name>Radar</name>
	  <object-name>indicatorRight4</object-name>
	  <type>material</type>
	  <condition>
		  	<not-equals>
		  		<property>instrumentation/radar/serviceable</property>
				<value>1</value>
		  	</not-equals>
	  </condition>
	  <emission>
