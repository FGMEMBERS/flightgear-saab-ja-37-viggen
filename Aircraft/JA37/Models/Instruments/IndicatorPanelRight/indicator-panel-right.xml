<?xml version="1.0"?>
<PropertyList>
    <path>indicator-panel-right.ac</path>

	<animation>
	  <name>Flghtstick</name>
	  <object-name>indicatorLeft1</object-name>
	  <type>material</type>
	  <condition>
	  	<equals>
	  		<property>sim/ja37/avionics/joystick</property>
			<value>1</value>
	  	</equals>
	  </condition>
	  <emission>
	    <red>1</red>
	    <green>1</green> 
	    <blue>1</blue>
	    <factor-prop>controls/lighting/instruments-norm</factor-prop>
	  </emission>
	</animation>

	<animation>
	  <name>a/p att</name>
	  <object-name>indicatorLeft2</object-name>
