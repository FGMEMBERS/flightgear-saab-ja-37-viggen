<?xml version="1.0"?>
<PropertyList>
    <path>gauge.ac</path>

	 <effect>  
      <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
      <object-name>glass</object-name>
    </effect>

	 <animation>
	  <type>rotate</type>
	  <object-name>TheHand</object-name>
	  <condition>
	    <greater-than>
	      <property>systems/electrical/outputs/ac-instr-voltage</property>
	      <value>100</value>
	    </greater-than>
	  </condition>
	  <property>fdm/jsbsim/systems/flight/oxygen-pressure-kPa</property>
	  <factor>.006</factor>
	  <offset-deg>240</offset-deg>
	  <axis>
	   <x>0</x>
	   <y>0</y>
	   <z>-1</z>
	  </axis>
	 </animation>

	<animation>
	  <type>pick</type> 
	  <object-name>CLOCK_face</object-name>
      <object-name>kmAltGlass</object-name>
	  <condition>   
	    <greater-than>
	    <property>systems/electrical/outputs/dc-voltage</property>
	    <value>20</value>
	   </greater-than>
	  </condition>
	  <hovered>
	       <binding>
	         <command>set-tooltip</command>
	         <tooltip-id>oxymano</tooltip-id>
	         <label>Oxygen manometer</label>
	      </binding>
	   </hovered>
	 </animation>
	  

	<!-- lighting -->
	<animation>
	  <object-name>CLOCK_face</object-name>
      <object-name>TheHand</object-name>
	  <type>material</type>
	  <emission>
	    <red-prop>instrumentation/instrumentation-light/r</red-prop> 
	     <green-prop>instrumentation/instrumentation-light/g</green-prop> 
	     <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
	     <factor-prop>controls/lighting/instruments-norm</factor-prop>
	  </emission>
	</animation>


</PropertyList>
