<?xml version="1.0"?>


<PropertyList>

  <path>beacon-glow-red.ac</path>
  <nopreview/>
  
  <offsets>
    <x-m> -1.5524</x-m>
    <y-m> 0</y-m>
    <z-m> -0.865</z-m>
  </offsets>

  <!-- Special Shaders -->

  <animation>
    <type>noshadow</type>
    <object-name>LightBeaconGlow</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>LightBeaconGlow</object-name>
  </effect>

  <!-- Animations -->

 <animation>
  <type>dist-scale</type>
  <object-name>LightBeaconGlow</object-name>
  <interpolation>
   <entry><ind>0</ind><dep>1.0</dep></entry>
   <entry><ind>5000</ind><dep>25.0</dep></entry>
  </interpolation>
 </animation>

  <!-- Top (red) beacon light -->

<animation>
  <type>material</type>
  <object-name>LightBeaconGlow</object-name>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>sim/multiplay/generic/int[15]</factor-prop><!-- sim/model/lighting/beacon/state -->
  </emission>
 </animation>

   <animation>
    <type>scale</type>
    <object-name>LightBeaconGlow</object-name>
    <property>sim/multiplay/generic/int[15]</property>
    <x-min>0.01</x-min>
    <y-min>0.01</y-min>
    <z-min>0.01</z-min>
    <x-factor>2.0</x-factor>
    <y-factor>2.0</y-factor>
    <z-factor>2.0</z-factor>
   </animation>

  <animation>
    <type>select</type>
    <object-name>LightBeaconGlow</object-name>
    <condition>
      <property>sim/multiplay/generic/int[9]</property>
    </condition>
  </animation>

</PropertyList>