<?xml version="1.0"?>

<PropertyList>
  <nopreview/>

   <name>ExternalFlame</name>
   <path>Aircraft/Generic/Effects/Thruster/thrust_flame.ac</path>

   <offsets> 
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
    <heading-deg>0</heading-deg>
   </offsets>
   
  <effect>
   <inherits-from>augmentationFlame</inherits-from>
   <object-name>Bounding_box</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>Bounding_box</object-name>
    <nopreview/>
    <condition>
     <property>sim/multiplay/generic/int[4]</property><!-- engines/engine[0]/augmentation -->
     <not>
      <property>sim/multiplay/generic/int[8]</property><!-- engines/engine[0]/reversed -->
     </not>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>Bounding_box</object-name>
    <nopreview/>
    <property>sim/multiplay/generic/float[3]</property><!-- engines/engine[0]/nozzle-pos-norm -->
    <x-min>0.2</x-min>
    <y-min>2.75</y-min>
    <z-min>2.75</z-min>
    <x-factor>1.5</x-factor>
    <y-factor>1.0</y-factor>
    <z-factor>1.0</z-factor>
  </animation>

</PropertyList>
