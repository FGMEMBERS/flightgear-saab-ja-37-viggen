<?xml version="1.0"?>

<PropertyList>

  <path>vaporCone.ac</path>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>vaporCone</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vaporCone</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>vaporCone</object-name>
    <condition>
      <and>
        <greater-than>
          <property>/velocities/mach</property>
          <value>0.8</value>
        </greater-than>
        <less-than>
          <property>/velocities/mach</property>
          <value>1.2</value>
        </less-than>
        <less-than>
          <property>/position/altitude-ft</property>
          <value>5000.0</value>
        </less-than>
      </and>
    </condition>
  </animation>

