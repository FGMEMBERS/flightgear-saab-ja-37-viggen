<?xml version="1.0"?>
 
<PropertyList>

 <fx>

<!--                                                                             canopy                                   --> 
 
  <canopy>
   <name>canopy</name>
   <path>Sounds/canopy.wav</path>
   <mode>in-transit</mode>
   <property>fdm/jsbsim/fcs/canopy-pos-norm</property>
   <reference-dist>30</reference-dist>
   <max-dist>100</max-dist>
   <position>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.195</z>
   </position>
   <pitch>
    <internal>dt_start</internal>
    <offset>1.25</offset>
    <factor>-0.25</factor>
   </pitch>
   <volume>
    <max>0.5</max>
   </volume>
  </canopy>

<!--                                                                             battery                                   -->

  <battery>
   <name>battery_start</name>
   <path>Sounds/BatteryStart.wav</path>
   <mode>single</mode>
   <type>avionics</type>
   <condition>
   <property>sim/current-view/internal</property>
    <equals>
     <property>/systems/electrical/batterysignal</property>
     <value>1.0</value>
    </equals>
   </condition>
   <reference-dist>2</reference-dist>
   <max-dist>5</max-dist>
   <position>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.195</z>
   </position>
   <volume>
    <max>0.5</max>
   </volume>
  </battery>


<!--                               Fly-By View                        engine                                   -->

  <flybyslow>
   <name>high pitch fly by</name>
   <path>Sounds/roar-high.wav</path>
   <mode>looped</mode>

  <condition>
   <equals>
     <property>sim/current-view/name</property>
     <value>Fly-By View</value>
    </equals>
    <greater-than>
      <property>velocities/airspeed-kt</property>
      <value>50.0</value>
    </greater-than>
    <property>engines/engine/running</property>
  </condition>

   <reference-dist>25</reference-dist>
   <max-dist>10000</max-dist>
   <position>
    <x>4.6</x>
    <y>0.0</y>
    <z>0.0</z>
   </position>
   
   <orientation>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>50.0</inner-angle>
    <outer-angle>80.0</outer-angle>
    <outer-gain>0.75</outer-gain>
   </orientation>
   
   <volume>
    <property>engines/engine/thrust_lb</property>
    <factor>0.000050</factor>
   </volume>
   
  </flybyslow>
  
  <flybymed>
   <name>medium pitch fly by</name>
   <path>Sounds/roar-medium.wav</path>
   <mode>looped</mode>

  <condition>
   <equals>
     <property>sim/current-view/name</property>
     <value>Fly-By View</value>
    </equals>
    <greater-than>
      <property>velocities/airspeed-kt</property>
      <value>50.0</value>
    </greater-than>
    <property>engines/engine/running</property>
  </condition>

   <reference-dist>25</reference-dist>
   <max-dist>10000</max-dist>
   <position>
    <x>4.6</x>
    <y>0.0</y>
    <z>0.0</z>
   </position>
   
   <orientation>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>45.0</inner-angle>
    <outer-angle>120.0</outer-angle>
    <outer-gain>0.5</outer-gain>
   </orientation>
   
   <volume>
    <property>engines/engine/thrust_lb</property>
    <factor>0.000050</factor>
   </volume>
   
  </flybymed>
  
  <flybylow>
   <name>low pitch fly by</name>
   <path>Sounds/roar-low.wav</path>
   <mode>looped</mode>  

  <condition>
    <equals>
     <property>sim/current-view/name</property>
     <value>Fly-By View</value>
    </equals>
    <property>engines/engine/running</property>
    <greater-than>
      <property>velocities/airspeed-kt</property>
      <value>50.0</value>
    </greater-than>
  </condition>

   <reference-dist>25</reference-dist>
   <max-dist>10000</max-dist>
   <position>
    <x>4.6</x>
    <y>0.0</y>
    <z>0.0</z>
   </position>
   
   <orientation>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>45</inner-angle>
    <outer-angle>180.0</outer-angle>
    <outer-gain>0</outer-gain>
   </orientation>
   
   <volume>
    <property>engines/engine/thrust_lb</property>
    <factor>0.000150</factor>
   </volume>
   
  </flybylow>  
  
  
  <!--                               Cockpit View                      engine                                   -->


  <engine_idle_cockpit>
   <name>internal fan</name>
   <path>Sounds/whine.wav</path>
   <mode>looped</mode>
   <type>avionics</type>
   <condition>
    <property>sim/current-view/internal</property>
    <greater-than>
      <property>engines/engine/n1</property>
      <value>0.5</value>
    </greater-than>
    <less-than>
      <property>engines/engine/n1</property>
      <value>85.0</value>
    </less-than>
   </condition>
   <reference-dist>30</reference-dist>
   <max-dist>100</max-dist>
   <position>
    <x>-0.6</x>
    <y>0.0</y>
    <z>-0.37</z>
   </position>
   <orientation>
    <x>-0.98</x>
    <y>0.0</y>
    <z>0.0</z>
   </orientation>
   <pitch>
    <property>engines/engine/n1</property>
    <offset>0.5</offset>
    <factor>.0075</factor>
   </pitch>
   <volume>
    <difference>
      <value>100</value>
      <property>engines/engine/n1</property>      
    </difference>
    <factor>0.02</factor>
   </volume>
  </engine_idle_cockpit>
  
<engine_mil_cockpit>
   <name>internal turbine</name>
   <path>Sounds/thrust-interior.wav</path>
   <mode>looped</mode>
   <type>avionics</type>
   <condition>
    <property>sim/current-view/internal</property>
    <property>engines/engine/running</property>
   </condition>
   <reference-dist>2000</reference-dist>
   <max-dist>10000</max-dist>
   <position>
    <x>4.6</x>
    <y>0.0</y>
    <z>0.0</z>
   </position>
   <orientation>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>200.0</inner-angle>
    <outer-angle>360.0</outer-angle>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>engines/engine/thrust_lb</property>
    <factor>0.00002</factor>
   </volume>
   <pitch>
    <property>engines/engine/n1</property>
    <offset>0.3</offset>
    <factor>0.01</factor>
   </pitch>
  </engine_mil_cockpit>
  
<engine_augmented_cockpit>
   <name>internal afterburner</name>
   <path>Sounds/afterburner-interior.wav</path>
   <mode>looped</mode>
   <type>avionics</type>
   <condition>
    <property>sim/current-view/internal</property>
    <property>engines/engine/augmentation</property>
   </condition>
   <reference-dist>5000</reference-dist>
   <max-dist>30000</max-dist>
   <position>
    <x>4.6</x>
    <y>0.0</y>
    <z>0.0</z>
   </position>
   <orientation>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>200.0</inner-angle>
    <outer-angle>360.0</outer-angle>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>engines/engine/nozzle-pos-norm</property>
    <offset>0.05</offset>
    <factor>0.2</factor>
   </volume>
  </engine_augmented_cockpit>
  
<!--                               Model View                        engine                                   -->  
  
  <engine_idle_model>
   <name>external fan</name>
   <path>Sounds/turbojet_fan.wav</path>
   <mode>looped</mode>
   <condition>
    <greater-than>
      <property>engines/engine/n1</property>
      <value>1</value>
    </greater-than>
    <not-equals>
     <property>sim/current-view/name</property>
     <value>Fly-By View</value>
    </not-equals>
    <not-equals>
      <property>sim/current-view/internal</property>
      <value>1</value>
    </not-equals>
    <property>/gear/gear[0]/wow</property>
   </condition>
   <reference-dist>5</reference-dist>
   <max-dist>3000</max-dist>
   <position>
    <x>0.6</x>
    <y>0.0</y>
    <z>-0.37</z>
   </position>
   <orientation>
    <x>-0.98</x>
    <y>0.0</y>
    <z>-0.17</z>
    <inner-angle>90.0</inner-angle>
    <outer-angle>180.0</outer-angle>
    <outer-gain>1</outer-gain>
   </orientation>
   <pitch>
    <property>engines/engine/n1</property>
    <offset>1</offset>
    <factor>0.005</factor>
   </pitch>
   <volume>
    <difference>
      <value>100</value>
      <property>engines/engine/n1</property>      
    </difference>
    <factor>0.05</factor>
   </volume>
  </engine_idle_model>
 
   
  <engine_mil_model>
   <name>external turbine</name>
   <path>Sounds/thrust-exterior.wav</path>
   <mode>looped</mode>
   <condition>
     <not-equals>
      <property>sim/current-view/name</property>
      <value>Fly-By View</value>
    </not-equals>
    <not-equals>    
      <property>sim/current-view/internal</property>
      <value>1</value>    
    </not-equals>
    <property>engines/engine/running</property>
    <greater-than-equals>
      <property>engines/engine/n1</property>
      <value>30</value>
    </greater-than-equals>
    <not>
      <property>/gear/gear[0]/wow</property>
    </not>
    </condition>
   <reference-dist>5</reference-dist>
   <max-dist>10000</max-dist>
   <position>
    <x>4.6</x>
    <y>0.0</y>
    <z>0.0</z>
   </position>
   <orientation>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>90.0</inner-angle>
    <outer-angle>180.0</outer-angle>
    <outer-gain>0.4</outer-gain>
   </orientation>
   <volume>
    <property>engines/engine/thrust_lb</property>
    <offset>0.100</offset>
    <factor>0.000013</factor>
   </volume>
   <pitch>
    <property>engines/engine/n1</property>
    <offset>0.3</offset>
    <factor>0.03</factor>
   </pitch>
  </engine_mil_model>

 

  <engine_augmented_model>
   <name>external afterburner</name>
   <path>Sounds/exhaust_loop.wav</path>
   <mode>looped</mode>
   <condition>
    <not-equals>
      <property>sim/current-view/name</property>
      <value>Fly-By View</value>
    </not-equals>
    <not-equals>
     <property>sim/current-view/internal</property>
     <value>1</value>
    </not-equals>
    <property>engines/engine/augmentation</property>
    </condition>
   <reference-dist>5</reference-dist>
   <max-dist>30000</max-dist>
   <position>
    <x>4.6</x>
    <y>0.0</y>
    <z>0.0</z>
   </position>
   <orientation>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
    <inner-angle>60.0</inner-angle>
    <outer-angle>180.0</outer-angle>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>engines/engine/nozzle-pos-norm</property>
    <offset>0.05</offset>
    <factor>0.85</factor>
   </volume>
  </engine_augmented_model>

<!--                                                                          gears                                   -->  

  <rumble>
   <name>gear rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <!--<property>gear/gear[0]/position-norm</property>-->
   <condition>
    <property>sim/current-view/internal</property>
    <greater-than>
     <property>gear/gear[0]/position-norm</property>
     <value>0</value>
    </greater-than>
    <less-than>
      <property>gear/gear[0]/position-norm</property>
      <value>1</value>
    </less-than>
   </condition>
   <reference-dist>3</reference-dist>
   <max-dist>10</max-dist>
   <position>
    <x>1.2</x>
    <y>0.0</y>
    <z>-0.6</z>
   </position>
   <volume>
    <max>1</max>
   </volume>
  </rumble>

<roll>
   <name>roll on runway</name>
   <mode>looped</mode>
   <path>Sounds/roll.wav</path>
   <condition>
    <property>sim/current-view/internal</property>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
    <greater-than>
					<property>/velocities/groundspeed-kt</property>
					<value>25</value>
    </greater-than>
   </condition>
   <volume>
    <property>/velocities/groundspeed-kt</property>
    <type>log</type>
    <factor>0.025</factor>
   </volume>
  </roll>  

  <squeal>
   <name>touchdown squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <not>
     <property>sim/current-view/internal</property>
    </not>
    <or>
     <property>gear/gear[1]/wow</property>
     <property>gear/gear[2]/wow</property>
    </or>
   </condition>
   <reference-dist>150</reference-dist>
   <max-dist>500</max-dist>
   <position>
    <x>1.2</x>
    <y>0.0</y>
    <z>-0.6</z>
   </position>
   <volume>
    <property>velocities/speed-down-fps</property>
    <factor>0.05</factor>
   </volume>
   <volume>
    <property>velocities/airspeed-kt</property>
    <factor>0.01</factor>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>1.2</offset>
   </pitch>
  </squeal>

<!--                                                                          avionics warnings                           -->  


 <!-- Stall warnings taken from high-alpha warnings in Viggen manual page 242 -->
<stall>
		<name>stall</name>
		<mode>looped</mode>
		<path>Sounds/stall.wav</path>
		<type>avionics</type>
		<condition>
		<greater-than>
			<property>orientation/alpha-deg</property>
			<value>23</value>
		</greater-than>
		<greater-than>
			<property>velocities/airspeed-kt</property>
			<value>10</value>
		</greater-than>
		<!--<property>/sim/current-view/internal</property>-->
		<not>
      	<property>fdm/jsbsim/systems/crash-detect/crashed</property>
    	</not>
    	<not>
      <property>gear/gear[1]/wow</property>
      <property>gear/gear[2]/wow</property>
     </not>
		</condition>
		<volume><factor>4</factor></volume>
	</stall>
	
<stallw>
		<name>stallwarning</name>
		<mode>looped</mode>
		<path>Sounds/stallwarning.wav</path>
		<type>avionics</type>
		<condition>
  		<greater-than>
  			<property>orientation/alpha-deg</property>
  			<value>17</value>
  		</greater-than>
      <less-than>
        <property>orientation/alpha-deg</property>
        <value>23</value>
      </less-than>
  		<greater-than>
  			<property>velocities/airspeed-kt</property>
  			<value>10</value>
  		</greater-than>
  		<!--<property>/sim/current-view/internal</property>-->
  		<not>
        	<property>fdm/jsbsim/systems/crash-detect/crashed</property>
      	</not>
      	<not>
        <property>gear/gear[1]/wow</property>
        <property>gear/gear[2]/wow</property>
       </not>
		</condition>
		<volume><factor>3.5</factor></volume>
	</stallw>  
  
  
