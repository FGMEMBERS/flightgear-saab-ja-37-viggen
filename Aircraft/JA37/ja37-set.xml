      <desc>Select missile 1</desc>
       <binding>
        <command>property-assign</command>
        <property>controls/armament/station-select</property>
        <value>1</value>
       </binding>
       <binding>
        <command>nasal</command>
        <script>ja37.click();</script>
      </binding>
    </mod-ctrl>
    </key>
    <key n="50">
     <name>CTRL-2</name>
     <mod-ctrl>
     <desc>Select missile 2</desc> 
     <binding>
      <command>property-assign</command>
