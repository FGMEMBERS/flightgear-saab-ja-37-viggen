      <command>property-assign</command>
      <property>controls/armament/station-select</property>
      <value>0</value>
     </binding>
     <binding>
        <command>nasal</command>
        <script>ja37.click();</script>
      </binding>
    </mod-ctrl>
    </key>
    <key n="49">
     <name>CTRL-1</name>
