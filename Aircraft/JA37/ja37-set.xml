    <fcs>
      <canopy>
        <engage/>
        <has-power/>
        <serviceable/>
      </canopy>
      <yaw-damper-enable/>
      <flap-pos-cmd/>
      <flaps-serviceable/>
      <elevator-serviceable/>
      <aileron-serviceable/>
    </fcs>
    <gear>
      <serviceable type="bool">1</serviceable>
    </gear>
    <systems>
      <flapscontrol>
        <serviceable/>
      </flapscontrol>
    </systems>
    <aero>
      <mach-drag-factor>1</mach-drag-factor>
    </aero>
    <inertia>
      <asymmetric-wing-load>0</asymmetric-wing-load>
    </inertia>
  </jsbsim>
 </fdm>
 <controls>
  <armament>
    <station-select type="int">0</station-select><!-- cannon selected by default -->
    <trigger type="bool">0</trigger>
    <station n="1">
      <offsets>
        <x-m type="double">  3.15986</x-m>
        <y-m type="double"> -2.70311</y-m>
        <z-m type="double"> -0.67645</z-m>
      </offsets>
    </station>
    <station n="2">
      <offsets>
        <x-m type="double"> -1.02697</x-m>
        <y-m type="double"> -0.98148</y-m>
        <z-m type="double"> -0.94307</z-m>
      </offsets>
    </station>
    <station n="3">
      <offsets>
        <x-m type="double">  3.15986</x-m>
        <y-m type="double">  2.70311</y-m>
        <z-m type="double"> -0.67645</z-m>
      </offsets>
    </station>
    <station n="4">
      <offsets>
        <x-m type="double"> -1.02697</x-m>
        <y-m type="double">  0.98148</y-m>
        <z-m type="double"> -0.94307</z-m>
      </offsets>
    </station>            
  </armament>
  <gear>
   <brake-parking type="bool">true</brake-parking>
  </gear>
</controls>
<environment>
  <pressure-inhg>30</pressure-inhg>
</environment>
<systems>
  <electrical>
    <battery-full type="int">0</battery-full>
  </electrical>
</systems>

